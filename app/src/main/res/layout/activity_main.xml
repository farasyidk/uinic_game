<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvSapaan"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_pertanyaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="@string/tanya" />
    
    <Button
        android:id="@+id/btnMulai"
        android:layout_below="@+id/tv_pertanyaan"
        android:text="Jawab"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="117dp"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="88dp">


        <ImageView
            android:id="@+id/imgArdi1"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:adjustViewBounds="false"
            android:padding="10dp"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imgArdi2"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:adjustViewBounds="false"
            android:padding="10dp"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imgArdi3"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:adjustViewBounds="false"
            android:padding="10dp"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imgArdi4"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:adjustViewBounds="false"
            android:padding="10dp"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imgArdi5"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:adjustViewBounds="false"
            android:padding="10dp"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imgArdi6"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:adjustViewBounds="false"
            android:padding="10dp"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imgArdi7"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:adjustViewBounds="false"
            android:padding="10dp"
            app:layout_column="0"
            app:layout_row="2"
             />

        <ImageView
            android:id="@+id/imgArdi8"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:adjustViewBounds="false"
            android:padding="10dp"
            app:layout_column="1"
            app:layout_row="2"
             />

        <ImageView
            android:id="@+id/imgArdi0"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:adjustViewBounds="false"
            android:padding="10dp"
            app:layout_column="2"
            app:layout_row="2"
             />

    </GridLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnMulai"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="time" />

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="score" />

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mAdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2574611168349467/9490229750">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>